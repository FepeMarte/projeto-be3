@model IEnumerable<CadastroDePacientesBe3.Models.Clientes>

    
@{
    ViewData["Title"] = "Lista";
}

<section class="container-fluid">

    <h2 class="formatar">Pacientes</h2>

    <hr />

    <table class="table table-striped table-hover">
        <thead class="MainColor">
            <tr>
                <th>Prontuário</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Email</th>
                <th>Convenio</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Prontuario</td>
                    <td>@item.Nome @item.Sobrenome</td>
                    <td>@item.Cpf</td>
                    <td>@item.Email</td>
                    <td></td>
                    <td>
                        <div>
                            <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@item.Prontuario" class="btn btn-primary fa-facebook">Editar</a>
                            <a asp-controller="Clientes" asp-action="ToView" asp-route-id="@item.Prontuario" class="btn btn-secondary">Visualizar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>


</section>
