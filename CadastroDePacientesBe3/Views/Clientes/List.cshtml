@model IEnumerable<CadastroDePacientesBe3.Models.Clientes>

    
@{
    ViewData["Title"] = "Lista";
}

    <section class="container-fluid">
        <h2 class="formatar">Pacientes</h2>

        <hr />

        <form asp-action="List">



            <div class="row input-group">
                <input type="text" name="search" id="search" class="form-control" placeholder="Prontuario, Nome, CPF ou Email" />
                <div class="input-group-btn">
                    &nbsp;&nbsp;&nbsp;<input type="submit" value=" Buscar " class="btn greenB" />
                </div>
            </div>
            <br />

            <div class="row">
                <table class="table table-striped table-hover">
                    <thead class="MainColor">
                        <tr>
                            <th>Prontuário</th>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Prontuario</td>
                                <td>@item.Nome @item.Sobrenome</td>
                                <td>@item.Cpf</td>
                                <td>@item.Email</td>
                                <td>
                                    <div>
                                        <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@item.Prontuario" class="btn greenB"><i class="fas fa-pen">&nbsp;&nbsp;&nbsp;Editar&nbsp;&nbsp;&nbsp;</i></a>
                                        <a asp-controller="Clientes" asp-action="ToView" asp-route-id="@item.Prontuario" class="btn btn-secondary"><i class="fas fa-eye">  Visualizar</i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </form>
    </section>
